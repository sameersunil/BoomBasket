<div class="container">
    <div class="jumbotron">
        <h2>Search</h2>
        <% if @searchResults.nil? %>
          <h4>No Results Found!</h4>
        <% end %>
    </div>
      <% if not @searchResults.nil? %>
        <% if @searchResults.kind_of?(Array) %>
        	<% @searchResults.each do |product| %>
      			<div class="row">
    	  			<div class="col-sm-3"><%= image_tag product.img_url, class: "thumbnail", size: "50" %></div>
    				  <div class="col-sm-3"><h4><%= product.name %></h4></div>
    				  <div class="col-sm-3"><h4>Rs <%= product.price %></h4></div>
              <div class="col-sm-3"><%= link_to "Add to cart", add_to_cart_path(prod: product.id, cat: product.cat), class: "btn btn-primary", method: "post" %></div>
    			  </div>
        <% end %>
        <% else %>
            <div class="row">
              <div class="col-sm-3"><%= image_tag @searchResults.img_url, class: "thumbnail", size: "50" %></div>
              <div class="col-sm-3"><h4><%= @searchResults.name %></h4></div>
              <div class="col-sm-3"><h4>Rs <%= @searchResults.price %></h4></div>
              <div class="col-sm-3"><%= link_to "Add to cart", add_to_cart_path(prod: @searchResults.id, cat: @searchResults.cat), class: "btn btn-primary", method: "post" %></div>
          </div>
    		<% end %>
      <% end %>
</div>