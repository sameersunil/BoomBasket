<div class="container">
  <div class="jumbotron">
      <h1>Login</h1>
  </div>
</div>
<div class="container">
  <%= form_for :session, url: sessions_path(go: @prevPage), class: "form-horizontal" do |f| %>
    <div class="row form-group">
      <label class="control-label col-sm-2" for="email">Email:</label>
      <div class="col-sm-10">
        <%= f.text_field :email, class: "form-control", placeholder: "Enter email" %>
      </div>
    </div>
    <div class="row form-group">
      <label class="control-label col-sm-2" for="pwd">Password:</label>
      <div class="col-sm-10">
        <%= f.password_field :pwd, class: "form-control", placeholder: "Enter password" %>
      </div>
    </div>
    <div class="row form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Submit</button>
      </div>
    </div>
    <div class="row">
      <% unless @failed.nil? %>
        <div class="col-sm-offset-2 col-sm-10"><h4><span class="label label-danger">Oops! Wrong Credentials</span></h4></div>
      <% end %>
      
    </div>
  <% end %>
</div>