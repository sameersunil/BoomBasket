<% if @user.nil? %>
	$("#wrongLoginInfo").show();
	$("#emailTextField").val("");
	$("#pwdTextField").val("");
	$("#emailTextField").focus();
<% else %>
	$('#login').modal('hide');
	$('#account').html('<a href=<%= sign_out_path %>><span class="glyphicon glyphicon-log-out"></span> Logout</a>');
	$('#accountInfo').html('<a><span class="glyphicon glyphicon-user"></span><%= " " + @user.email %>');
	$('#cartFooterInfo').html('<span class="glyphicon glyphicon-user"></span><%= " " + @user.email %><h3>Your total is Rs <%= @total %></h3><%= link_to orders_path, method:"post" do %><span class="btn btn-success">Place Order!</span><% end %>');
<% end %>
